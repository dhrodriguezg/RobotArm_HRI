<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    tools:context="ScreenJoystickInterface"
    android:orientation="horizontal">

    <uniandes.disc.imagine.robotarm_app.teleop.utils.MjpegView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mjpegView"
        android:visibility="visible" />

    <org.ros.android.view.RosImageView
        android:id="@+id/streamingView"
        android:src="@drawable/loading_wide"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="visible" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/target_cool"
        android:id="@+id/targetView"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120dp"
        android:visibility="invisible" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/onScreenControls">


        <uniandes.disc.imagine.robotarm_app.teleop.widget.CustomVirtualJoystickView
            android:id="@+id/virtual_joystick_pos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="19%"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.5" />

        <uniandes.disc.imagine.robotarm_app.teleop.widget.CustomVirtualJoystickView
            android:id="@+id/virtual_joystick_rot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="19%"
            android:layout_above="@+id/virtual_joystick_pos"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="rotation_control"
            android:id="@+id/rotationTextView"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffd9d9d9"
            android:layout_alignTop="@+id/virtual_joystick_rot"
            android:layout_alignRight="@+id/virtual_joystick_rot"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="position_control"
            android:id="@+id/positionTextView"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffd9d9d9"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/virtual_joystick_pos"
            android:layout_alignRight="@+id/virtual_joystick_pos"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp" />


        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/emergency_on"
            android:textOff="@string/emergency_off"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/emergencyButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:textStyle="bold"
            android:visibility="gone" />

        <uniandes.disc.imagine.robotarm_app.teleop.widget.ScrollerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="10%"
            android:id="@+id/scrollerView"
            android:alpha="0.6"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="grasping_open"
            android:id="@+id/scrollTextView"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ff797979"
            android:layout_above="@+id/scrollerView"
            android:layout_alignLeft="@+id/scrollerView"
            android:layout_alignRight="@+id/scrollerView"
            />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleCamera2"
            android:textOn="camera2_name"
            android:textOff="camera2_name"
            android:checked="false"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleCamera1"
            android:textOn="camera1_name"
            android:textOff="camera1_name"
            android:checked="true"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/toggleCamera2" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleCamera3"
            android:textOn="camera3_name"
            android:textOff="camera3_name"
            android:checked="false"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/toggleCamera2" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleCamera4"
            android:textOn="camera4_name"
            android:textOff="camera4_name"
            android:checked="false"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/toggleCamera3" />

    </android.support.percent.PercentRelativeLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/target_cool"
        android:id="@+id/targetCenter"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.7"
        android:visibility="invisible" />




</RelativeLayout>