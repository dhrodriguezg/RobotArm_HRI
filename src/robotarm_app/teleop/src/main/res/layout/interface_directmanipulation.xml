<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    tools:context=".DraggingActivity"
    android:orientation="horizontal">

    <uniandes.disc.imagine.robotarm_app.teleop.utils.MjpegView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mjpegView"
        android:visibility="visible" />

    <org.ros.android.view.RosImageView
        android:id="@+id/streamingView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/loading_wide"
        android:visibility="visible" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/onScreenControls">

        <uniandes.disc.imagine.robotarm_app.teleop.widget.ScrollerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="10%"
            android:id="@+id/scrollerView"
            android:alpha="0.6"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="grasping_open"
            android:id="@+id/scrollTextView"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ff797979"
            android:layout_above="@+id/scrollerView"
            android:layout_alignLeft="@+id/scrollerView"
            android:layout_alignRight="@+id/scrollerView" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleOmmidirectional"
            android:textOn="Onmidirectional"
            android:textOff="Non-omnidirectional"
            android:checked="false"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleCamera2"
            android:textOn="camera2_name"
            android:textOff="camera2_name"
            android:checked="false"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleCamera1"
            android:textOn="camera1_name"
            android:textOff="camera1_name"
            android:checked="true"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/toggleCamera2" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleCamera3"
            android:textOn="camera3_name"
            android:textOff="camera3_name"
            android:checked="false"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/toggleCamera2" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleCamera4"
            android:textOn="camera4_name"
            android:textOff="camera4_name"
            android:checked="false"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/toggleCamera3" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleGripperPose1"
            android:textOn="Gripper Right2Left"
            android:textOff="Gripper Right2Left"
            android:checked="false"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleGripperPose2"
            android:textOn="Gripper Front2Back"
            android:textOff="Gripper Front2Back"
            android:checked="false"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/toggleGripperPose1" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleGripperPose3"
            android:textOn="Gripper Top2Down"
            android:textOff="Gripper Top2Down"
            android:checked="false"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/toggleGripperPose2" />


        <uniandes.disc.imagine.robotarm_app.teleop.widget.CustomVirtualJoystickView
            android:id="@+id/virtual_joystick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="19%"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Yaw / Roll"
            android:id="@+id/positionTextView"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ff000000"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/virtual_joystick"
            android:layout_alignRight="@+id/virtual_joystick"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="15%"
            android:src="@drawable/target_cool"
            android:id="@+id/targetView"
            android:alpha="0.5"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </android.support.percent.PercentRelativeLayout>

</RelativeLayout>
